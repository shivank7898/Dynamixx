{
  "name": "dynamixx",
  "version": "1.0.2",
  "description": "Zero-boilerplate dynamic state management system built on Zustand",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist"
  },
  "keywords": [
    "zustand",
    "state-management",
    "zustand",
    "typescript",
    "zero-config"
  ],
  "author": "Shivank",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "zustand": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shivank7898/Dynamixx.git"
  },
  "bugs": {
    "url": "https://github.com/shivank7898/Dynamixx/issues"
  },
  "homepage": "https://github.com/shivank7898/Dynamixx#readme"
